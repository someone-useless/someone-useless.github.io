---
import GamePage from "components/stack-ten/game/Game";
import Page from "layouts/Page.astro";
---

<Page>
    <GamePage client:load />
</Page>

<style lang="less" is:global>
    @import "global-utils.less";

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        height: 100%;

        button {
            display: block;
            color: white;
            background-color: black;
            padding: 0.5rem;
            border-radius: 0.5rem;
            font-size: large;

            &:not([disabled]) {
                .on-hover-underline();
            }

            &[disabled] {
                background-color: gray;
                box-shadow: none;
            }
        }

        #join-area {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;

            h1 {
                @media screen and (max-width: 600px) {
                    margin-top: 3rem;
                }
            }

            input#game-code {
                border-radius: 1rem;
                text-align: center;
                padding: 0.8rem 0;
                font-size: large;
                border-width: 5px;
                border-color: black;
                margin: 1rem 0 2rem 0;
            }
        }

        #create-area {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #back-button {
            position: fixed;
            top: 0;
            left: 0;
            color: white;
            text-decoration: none;
            display: block;
            border-radius: 0 0 15px 0;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.8);
            .on-hover-underline();
        }

        .popup-overlay {
            backdrop-filter: brightness(0.3);
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 2;
        }

        .popup {
            display: flex;
            align-items: center;
            flex-direction: column;
            z-index: 3;
            background-color: white;
            border-width: 5px;
            border-color: black;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            border-radius: 0.5rem;
            box-shadow: 0 0 3px 3px black;
            padding: 1rem;
            width: min(80svw, 35rem);
            height: min(80svh, 20rem);

            h3 {
                margin-top: 3rem;
                font-size: 1.4rem;
            }

            p {
                align-self: flex-start;
            }

            .close {
                position: fixed;
                top: 10px;
                right: 10px;

                display: block;
                color: white;
                background-color: black;
                padding: 0.5rem;
                border-radius: 0.5rem;
                font-size: 0.8rem;
                .on-hover-underline();
            }
        }
    }
</style>
