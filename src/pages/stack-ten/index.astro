---
import Page from "layouts/Page.astro";
---

<Page>
    <a href="/" id="back-button">BACK TO THE HELL</a>
    <h1>STACK 10!</h1>
    <br />
    <a href="./rules" class="subpage">Rules</a>
    <br />
    <a href="./game" class="subpage">Game</a>
</Page>

<style lang="less" is:global>
    @import "global-utils.less";

    main {
        display: flex;
        flex-direction: column;
        align-items: center;

        @media (max-width: 600px) {
            h1 {
                margin-top: 3rem;
            }
        }

        .subpage {
            display: block;
            color: white;
            background-color: black;
            padding: 0.5rem;
            border-radius: 0.5rem;
            .on-hover-underline();
        }

        #back-button {
            position: absolute;
            top: 0;
            left: 0;
            color: white;
            display: block;
            border-radius: 0 0 15px 0;
            padding: 10px;
            background-color: rgba(138, 43, 226, 0.8);
            .on-hover-underline();
        }
    }
</style>
