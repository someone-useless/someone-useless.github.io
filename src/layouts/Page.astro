---
interface Props {
	title?: string;
	desc?: string
}

const { title, desc } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={desc ?? "A useless site"} />
		<base href={Astro.url.pathname.endsWith("/") ? Astro.url.pathname : `${Astro.url.pathname}/`} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title !== undefined ? `${title} | USELESS SITE` : "USELESS SITE"}</title>
	</head>
	<body>
		
		<main>
			<slot />
		</main>
	</body>
</html>

<style lang="less" is:global>
	@import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap");

	*,
	*::before,
	*::after {
		box-sizing: border-box;
		font-family: inherit;
	}

	body {
		padding: 0;
		margin: 0;
		width: 100%;
		height: 100svh;
		overflow: auto;
	}

	html {
		font-family: "JetBrains Mono", monospace;
		display: block;
		width: 100%;
		height: 100svh;
		overflow: hidden;
		font-size: 1rem;
		line-height: 1.5;
	}
</style>
